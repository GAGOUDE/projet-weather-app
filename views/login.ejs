<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <!-- CSS -->
    <link rel="stylesheet" href="/stylesheets/style.css">

    <title>Weather App</title>
  </head>
  <body>

      <div class="home">

        <!-- Background Video -->
       <div class="row">
          <div class="overlay"></div>
          <video class="bg-video" playsinline autoplay muted loop>
            <source src="https://storage.googleapis.com/coverr-main/mp4/Mt_Baker.mp4" type="video/mp4">
          </video>
       </div>

        <div class="row">
          <div class="col-12 text-center get_started">
            <h2>Get started with WeatherApp !</h2>
          </div>
        </div>


        <div class="row d-flex justify-content-center">

          <!-- SIGN UP AREA -->
          <div class="col-12 col-sm-6 col-lg-4 m-2 p-0">

            <div class="formArea text-center p-2">
              <h4 class="titleForm">Sign Up</h4>

              <form action="/users/sign-up" method="POST">
                <div class="form-group">
                  <label for="exampleInputUsername">Username</label>
                  <input name="usernameFromFront" type="text" class="form-control" placeholder="Enter username">
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Email address</label>
                  <input name="emailFromFront" type="email" class="form-control" aria-describedby="emailHelp"
                    placeholder="Enter email">
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Password</label>
                  <input name="passwordFromFront" type="password" class="form-control" placeholder="Enter password">
                </div>

                <button type="submit" class="btn btn-info btn-login">Submit</button>
              </form>
            </div>

          </div>

          <!-- SIGN IN AREA -->
          <div class="col-12 col-sm-6 col-lg-4 p-0 mt-3">

            <div class="formArea text-center p-2">

              <h4 class="titleForm">Sign In</h4>
              
                 <form action="/users/sign-in" method="POST">

                  <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input name="emailFromFront" type="email" class="form-control" aria-describedby="emailHelp"
                      placeholder="Enter email">
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input name="passwordFromFront" type="password" class="form-control" placeholder="Enter password">
                  </div>

                  <button type="submit" class="btn btn-info btn-login">Submit</button>
  
                 </form>

            </div>

          </div>
        </div>
      </div>


      <!-- SCRIPTS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>

